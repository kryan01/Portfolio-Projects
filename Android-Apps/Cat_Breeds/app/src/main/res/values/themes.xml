<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (LIGHT) -->
    <style name="Base.Theme.CatBreeds" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- brand palette -->
        <item name="colorPrimary">@color/cat_primary</item>
        <item name="colorSecondary">@color/cat_secondary</item>
        <item name="colorTertiary">@color/cat_tertiary</item>

        <!-- surfaces, backgrounds -->
        <item name="colorSurface">@color/cat_surface</item>
        <item name="android:colorBackground">@color/cat_surface</item>

        <!-- system bar colors -->
        <item name="android:statusBarColor">@color/cat_surface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- theme alias -->
    <style name="Theme.CatBreeds" parent="Base.Theme.CatBreeds" />
</resources>